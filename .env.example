# Required: Traefik IP (the address Pi-hole will resolve hostnames to)
TRAEFIK_IP="192.168.1.1"

# Required: Comma-separated Pi-hole instance IPs
PIHOLE_HOSTS="192.168.1.2,192.168.1.3"

# Global password (used for all Pi-hole instances unless overridden)
# PIHOLE_PASSWORD="your-app-password"

# Per-instance passwords (replace dots in IP with underscores)
PIHOLE_PASSWORD_192_168_1_2="your-app-password-for-pihole-1"
PIHOLE_PASSWORD_192_168_1_3="your-app-password-for-pihole-2"
